// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User  {
  id Int @unique @default(autoincrement())
  fullName String
  email String
  password String  
  reservations Reservations[]
  orderItem OrderItem[]
}

model Reservations {
  id Int @unique @default(autoincrement())
  totalGuest String
  user User? @relation(fields: [reservedBy], references: [id])
  reservedBy Int?
  date String
  time String
  gcashReceipt String
}

model OrderItem {
  id Int @unique @default(autoincrement())
  user User? @relation(fields: [orderBy], references: [id])
  orderBy Int?
  orderTitle String
  orderPrice String
  orderImage String?
}